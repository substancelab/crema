<%= form_for(service) do |form| %>
  <div>
    <div>
      <div class="space-y-6">
        <%= render(Form::InputGroup::Component.new(:form => form, :attribute => :name)) %>

        <div class="mt-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          <%= form.label :price, :class => "block text-sm font-medium leading-5 text-gray-700 sm:mt-px sm:pt-2" %>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <%- css_classes = form.object.errors.include?(:price) ? "max-w-lg relative rounded-md shadow-xs sm:max-w-xs" : "max-w-lg rounded-md shadow-xs sm:max-w-xs" %>
            <div class="<%= css_classes %>">
              <%= form.number_field :price, :class => "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
              <% if form.object.errors.include?(:price) %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            <% if form.object.errors.include?(:price) %>
              <% form.object.errors[:price].each do |error| %>
                <p class="mt-2 text-sm text-red-600">â†‘ <%= error.upcase_first %></p>
              <% end %>
            <% end %>
          </div>
        </div>

        <%= render(Form::UnitSelectorComponent.new(:form => form, :attribute => :unit)) %>

        <%= render(Form::InputGroup::Component.new(:form => form, :attribute => :economic_product_number)) %>
      </div>
    </div>
  </div>
  <div class="mt-8 border-t border-gray-200 pt-5">
    <div class="flex justify-end">
      <span class="ml-3 inline-flex rounded-md shadow-xs">
        <%= link_to "Cancel", services_path, :class => "py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-hidden focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out" %>
      </span>
      <span class="ml-3 inline-flex rounded-md shadow-xs">
        <%= form.submit "Save", :class => "inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-green-600 hover:bg-green-500 focus:outline-hidden focus:border-green-700 focus:shadow-outline-green active:bg-green-700 transition duration-150 ease-in-out" %>
      </span>
    </div>
  </div>
<% end %>
